<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.APP.Views.AdminCredentialsPage"
             Title="Update Admin Credentials"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame BackgroundColor="{AppThemeBinding Light=#9C27B0, Dark=#7B1FA2}" 
                   CornerRadius="16" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <VerticalStackLayout>
                    <Label Text="ðŸ”‘ Update Admin Credentials" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />
                    <Label Text="Change admin username and password" 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Current Credentials Info -->
            <Frame BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <VerticalStackLayout>
                    <Label Text="â„¹ï¸ Current Credentials" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" 
                           HorizontalOptions="Center" />
                    <Label Text="{Binding CurrentUsername, StringFormat='Username: {0}'}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" 
                           HorizontalOptions="Center" />
                    <Label Text="{Binding CurrentPassword, StringFormat='Password: {0}'}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- New Credentials Form -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" 
                   CornerRadius="12" 
                   Padding="20" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- New Username -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="New Username:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1" 
                               Text="{Binding NewUsername}" 
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               Placeholder="Enter new username" />
                    </Grid>

                    <!-- New Password -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="New Password:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1" 
                               Text="{Binding NewPassword}" 
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               Placeholder="Enter new password" 
                               IsPassword="True" />
                    </Grid>

                    <!-- Confirm Password -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="Confirm Password:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1" 
                               Text="{Binding ConfirmPassword}" 
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               Placeholder="Confirm new password" 
                               IsPassword="True" />
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" 
                        Text="ðŸ’¾ Update Credentials" 
                        BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}" 
                        TextColor="White" 
                        CornerRadius="12" 
                        FontAttributes="Bold"
                        Clicked="UpdateCredentials_Clicked" />
                <Button Grid.Column="1" 
                        Text="âŒ Cancel" 
                        BackgroundColor="{AppThemeBinding Light=#F44336, Dark=#D32F2F}" 
                        TextColor="White" 
                        CornerRadius="12" 
                        FontAttributes="Bold"
                        Clicked="Cancel_Clicked" />
            </Grid>

            <!-- Back Button -->
            <Button Text="â† Back to Admin Dashboard" 
                    BackgroundColor="{AppThemeBinding Light=#6C757D, Dark=#495057}" 
                    TextColor="White" 
                    CornerRadius="12" 
                    FontSize="16" 
                    FontAttributes="Bold" 
                    HeightRequest="50"
                    Clicked="Back_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
