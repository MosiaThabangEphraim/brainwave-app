<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.APP.Views.ProfileDetailsPage"
             Title="Profile Details"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame BackgroundColor="{AppThemeBinding Light=#4A90E2, Dark=#2C5AA0}" 
                   CornerRadius="16" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <VerticalStackLayout>
                    <Label Text="👤 Profile Details" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />
                    <Label Text="View and edit your profile information" 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Profile Picture Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" 
                   CornerRadius="12" 
                   Padding="20" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Profile Picture" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                    
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#404040}" 
                           CornerRadius="12" 
                           Padding="20" 
                           HorizontalOptions="Center">
                        <VerticalStackLayout Spacing="10">
                            <Frame BackgroundColor="Transparent" 
                                   CornerRadius="50" 
                                   Padding="0" 
                                   WidthRequest="100" 
                                   HeightRequest="100" 
                                   HasShadow="False">
                                <Image x:Name="ProfileImage" 
                                       Source="{Binding Me.Profile_Picture}" 
                                       Aspect="AspectFill" />
                            </Frame>
                            <Button Text="📷 Change Photo" 
                                    BackgroundColor="{AppThemeBinding Light=#4A90E2, Dark=#2C5AA0}" 
                                    TextColor="White" 
                                    CornerRadius="8" 
                                    FontSize="12" 
                                    Clicked="ChangePhoto_Clicked" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Profile Information -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" 
                   CornerRadius="12" 
                   Padding="20" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- First Name -->
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="First Name:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Label Grid.Column="1" 
                               Text="{Binding Me.F_Name}" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                               VerticalOptions="Center"
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}"
                               Padding="8,4"
                               Margin="0,2" />
                        <Button Grid.Column="2" 
                                Text="Edit" 
                                BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#F57C00}" 
                                TextColor="White" 
                                CornerRadius="8" 
                                WidthRequest="50" 
                                HeightRequest="30" 
                                FontSize="12"
                                Clicked="EditFirstName_Clicked" />
                    </Grid>

                    <!-- Last Name -->
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="Last Name:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Label Grid.Column="1" 
                               Text="{Binding Me.L_Name}" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                               VerticalOptions="Center"
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}"
                               Padding="8,4"
                               Margin="0,2" />
                        <Button Grid.Column="2" 
                                Text="Edit" 
                                BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#F57C00}" 
                                TextColor="White" 
                                CornerRadius="8" 
                                WidthRequest="50" 
                                HeightRequest="30" 
                                FontSize="12"
                                Clicked="EditLastName_Clicked" />
                    </Grid>

                    <!-- Email -->
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="Email:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Label Grid.Column="1" 
                               Text="{Binding Me.Email}" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                               VerticalOptions="Center"
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}"
                               Padding="8,4"
                               Margin="0,2" />
                        <Button Grid.Column="2" 
                                Text="Edit" 
                                BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#F57C00}" 
                                TextColor="White" 
                                CornerRadius="8" 
                                WidthRequest="50" 
                                HeightRequest="30" 
                                FontSize="12"
                                Clicked="EditEmail_Clicked" />
                    </Grid>

                    <!-- Role -->
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0" 
                               Text="Role:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                               VerticalOptions="Center" />
                        <Label Grid.Column="1" 
                               Text="{Binding Me.Role}" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                               VerticalOptions="Center"
                               BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#404040}"
                               Padding="8,4"
                               Margin="0,2" />
                        <Button Grid.Column="2" 
                                Text="Edit" 
                                BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#F57C00}" 
                                TextColor="White" 
                                CornerRadius="8" 
                                WidthRequest="50" 
                                HeightRequest="30" 
                                FontSize="12"
                                Clicked="EditRole_Clicked" />
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" 
                        Text="💾 Save Changes" 
                        BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}" 
                        TextColor="White" 
                        CornerRadius="12" 
                        FontAttributes="Bold"
                        Clicked="SaveChanges_Clicked" />
                <Button Grid.Column="1" 
                        Text="🔒 Change Password" 
                        BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}" 
                        TextColor="White" 
                        CornerRadius="12" 
                        FontAttributes="Bold"
                        Clicked="ChangePassword_Clicked" />
            </Grid>

            <!-- Back Button -->
            <Button Text="← Back to Profile" 
                    BackgroundColor="{AppThemeBinding Light=#6C757D, Dark=#495057}" 
                    TextColor="White" 
                    CornerRadius="12" 
                    FontSize="16" 
                    FontAttributes="Bold" 
                    HeightRequest="50"
                    Clicked="Back_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>







