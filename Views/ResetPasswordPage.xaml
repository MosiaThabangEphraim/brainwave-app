<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BrainWave.APP.ViewModels"
             x:Class="BrainWave.APP.Views.ResetPasswordPage"
             Title="Reset Password"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1A1A1A}">

    <ContentPage.BindingContext>
        <vm:ResetPasswordViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="30" VerticalOptions="Center">
            
            <!-- Header -->
            <Frame BackgroundColor="{AppThemeBinding Light=#4A90E2, Dark=#2C5AA0}" 
                   CornerRadius="20" 
                   Padding="30" 
                   Margin="0,0,0,40"
                   HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label Text="ðŸ”‘" 
                           FontSize="48" 
                           HorizontalOptions="Center" />
                    <Label Text="Reset Password" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />
                    <Label Text="Enter your token and new password" 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Reset Form -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" 
                   CornerRadius="16" 
                   Padding="30" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Reset Your Password"
                           FontSize="24"
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" 
                           HorizontalOptions="Center" />
                    
                    <Label Text="Enter your email address and the 6-digit token sent to you" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                           HorizontalOptions="Center" />

                    <!-- Email Entry -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#404040}" 
                           CornerRadius="12" 
                           Padding="16" 
                           HasShadow="False">
                        <Entry Placeholder="Enter your email address" 
                               Text="{Binding Email}" 
                               Keyboard="Email"
                               BackgroundColor="Transparent" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                               PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#AAAAAA}"
                               FontSize="16" />
                    </Frame>

                    <!-- Token Entry -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#404040}" 
                           CornerRadius="12" 
                           Padding="16" 
                           HasShadow="False">
                        <Entry Placeholder="Enter 6-digit token" 
                               Text="{Binding Token}" 
                               Keyboard="Numeric"
                               MaxLength="6"
                               BackgroundColor="Transparent" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                               PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#AAAAAA}"
                               HorizontalTextAlignment="Center"
                               FontSize="18"
                               FontAttributes="Bold" />
                    </Frame>

                    <!-- New Password Entry -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#404040}" 
                           CornerRadius="12" 
                           Padding="16" 
                           HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0"
                                   Placeholder="New Password"
                                   IsPassword="{Binding IsNewPasswordVisible, Converter={StaticResource InvertBoolConverter}}"
                                   Text="{Binding NewPassword}"
                                   BackgroundColor="Transparent"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#AAAAAA}" />
                            <ImageButton Grid.Column="1"
                                         Source="{Binding IsNewPasswordVisible, Converter={StaticResource PasswordVisibilityIconConverter}}"
                                         Command="{Binding ToggleNewPasswordVisibilityCommand}"
                                         VerticalOptions="Center"
                                         HorizontalOptions="End"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         BackgroundColor="Transparent" />
                        </Grid>
                    </Frame>

                    <!-- Confirm Password Entry -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#404040}" 
                           CornerRadius="12" 
                           Padding="16" 
                           HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0"
                                   Placeholder="Confirm New Password"
                                   IsPassword="{Binding IsConfirmPasswordVisible, Converter={StaticResource InvertBoolConverter}}"
                                   Text="{Binding ConfirmPassword}"
                                   BackgroundColor="Transparent"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#AAAAAA}" />
                            <ImageButton Grid.Column="1"
                                         Source="{Binding IsConfirmPasswordVisible, Converter={StaticResource PasswordVisibilityIconConverter}}"
                                         Command="{Binding ToggleConfirmPasswordVisibilityCommand}"
                                         VerticalOptions="Center"
                                         HorizontalOptions="End"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         BackgroundColor="Transparent" />
                        </Grid>
                    </Frame>

                    <!-- Password Requirements -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#E8F5E8, Dark=#1B5E20}" 
                           CornerRadius="8" 
                           Padding="12" 
                           HasShadow="False">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Password Requirements:" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label Text="â€¢ At least 8 characters long" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label Text="â€¢ Contains at least one uppercase letter" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label Text="â€¢ Contains at least one lowercase letter" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label Text="â€¢ Contains at least one number" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Button Text="Reset Password" 
                            Command="{Binding ResetPasswordCommand}" 
                            BackgroundColor="{AppThemeBinding Light=#4A90E2, Dark=#2C5AA0}" 
                            TextColor="White" 
                            CornerRadius="12" 
                            FontSize="16" 
                            FontAttributes="Bold" 
                            Padding="20" 
                            IsEnabled="{Binding IsFormValid}" />

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           HorizontalOptions="Center" 
                           FontSize="14" />

                    <Button Text="Back to Login" 
                            Command="{Binding BackToLoginCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#4A90E2, Dark=#90CAF9}" 
                            FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Frame BackgroundColor="{AppThemeBinding Light=#E8F5E8, Dark=#1B5E20}" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,20,0,0">
                <VerticalStackLayout>
                    <Label Text="BrainWave 2025" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>