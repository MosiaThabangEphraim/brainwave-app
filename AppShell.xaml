<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:BrainWave.APP.Views"
       x:Class="BrainWave.APP.AppShell"
       FlyoutBehavior="Disabled">

    <!-- Main TabBar (only visible when authenticated) -->
    <TabBar x:Name="MainTabBar" IsVisible="False">
        <ShellContent Title="Dashboard" Icon="dashboard.png" ContentTemplate="{DataTemplate views:DashboardPage}" Route="dashboard" />
        <ShellContent Title="Tasks" Icon="tasks.png" ContentTemplate="{DataTemplate views:TasksPage}" Route="tasks" />
        <ShellContent Title="Reminders" Icon="reminders.png" ContentTemplate="{DataTemplate views:RemindersPage}" Route="reminders" />
        <ShellContent Title="Collab" Icon="collab.png" ContentTemplate="{DataTemplate views:CollaborationPage}" Route="collab" />
        <ShellContent Title="Badges" Icon="badges.png" ContentTemplate="{DataTemplate views:BadgesPage}" Route="badges" />
        <ShellContent Title="Profile" Icon="profile.png" ContentTemplate="{DataTemplate views:ProfilePage}" Route="profile" />
        <ShellContent Title="Help" Icon="help.png" ContentTemplate="{DataTemplate views:HelpPage}" Route="help" />
    </TabBar>

    <!-- Auth Pages -->
    <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent Title="Register" ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
    <ShellContent Title="Forgot Password" ContentTemplate="{DataTemplate views:ForgotPasswordPage}" Route="ForgotPasswordPage" />
    <ShellContent Title="Reset Password" ContentTemplate="{DataTemplate views:ResetPasswordPage}" Route="ResetPasswordPage" />

    <!-- Admin Pages -->
    <ShellContent Title="Admin Dashboard" ContentTemplate="{DataTemplate views:AdminDashboardPage}" Route="admin/dashboard" />
    <ShellContent Title="Admin Users" ContentTemplate="{DataTemplate views:AdminUsersPage}" Route="admin/users" />
    <ShellContent Title="Admin Tasks" ContentTemplate="{DataTemplate views:AdminTasksPage}" Route="admin/tasks" />
    
    <!-- Test Page -->
    <ShellContent Title="App Test" ContentTemplate="{DataTemplate views:TestPage}" Route="test" />
    
    <!-- Task Detail Page -->
    <ShellContent Title="Task Details" ContentTemplate="{DataTemplate views:TaskDetailPage}" Route="TaskDetailPage" />
    
    <!-- Reminder Detail Page -->
    <ShellContent Title="Reminder Details" ContentTemplate="{DataTemplate views:ReminderDetailPage}" Route="ReminderDetailPage" />
    
    <!-- Password Update Page -->
    <ShellContent Title="Update Password" ContentTemplate="{DataTemplate views:PasswordUpdatePage}" Route="PasswordUpdatePage" />
    
    <!-- Collaboration Detail Page -->
    <ShellContent Title="Collaboration Details" ContentTemplate="{DataTemplate views:CollaborationDetailPage}" Route="CollaborationDetailPage" />
    
    <!-- Messages Page -->
    <ShellContent Title="Messages" ContentTemplate="{DataTemplate views:MessagesPage}" Route="messages" />

</Shell>
